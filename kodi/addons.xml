<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addons>
<addon id="pvr.chinachu"
		name="Harekaze (Chinachu PVR client)"
		version="4.0.0"
		provider-name="Harekaze project">
	<requires>
		<c-pluff version="0.1"/>
		<import addon="xbmc.pvr" version="5.2.1"/>
		<import addon="xbmc.codec" version="1.0.1"/>
	</requires>
	<extension point="xbmc.pvrclient"
		library_linux="pvr.chinachu.so"
		library_osx="pvr.chinachu.dylib"
		library_ios="pvr.chinachu-ios.dylib"
		library_android="libpvr.chinachu.so"
		library_rbpi="pvr.chinachu.armel.so"
		library_windx="pvr.chinachu.dll"
		/>
	<extension point="xbmc.addon.metadata">
		<platform>linux osx ios android rbpi windx</platform>
		<license>GPL v3.0</license>
		<summary>Chinachu PVR client</summary>
		<source>https://github.com/Harekaze/pvr.chinachu/</source>
		<website>https://github.com/Harekaze/pvr.chinachu/wiki</website>
		<forum>https://github.com/Harekaze/pvr.chinachu/issues</forum>
		<language>en ja</language>
		<disclaimer>Chinachu PVR client for Kodi</disclaimer>
	</extension>
</addon>
<addon id="repository.harekaze" name="Harekaze repository" version="1.0.0" provider-name="Harekaze project">
	<extension point="xbmc.addon.repository" name="Harekaze add-on repository">
		<info compressed="false">https://repo.harekaze.org/kodi/addons.xml</info>
		<checksum>https://repo.harekaze.org/kodi/addons.xml.md5</checksum>
		<datadir zip="true">https://repo.harekaze.org/kodi/</datadir>
	</extension>
	<extension point="xbmc.addon.metadata">
		<summary>Harekaze add-ons</summary>
		<description></description>
		<platform>all</platform>
	</extension>
</addon>
</addons>
